<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/boder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- Họ tên -->
    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="0.7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/robotolight"
                android:text="Họ tên:"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:fontFamily="@font/robotolight"
                android:id="@+id/tv_full_name"
                android:text="Trần Anh Quân"
                android:textColor="@color/black"
                android:layout_marginStart="2dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

       <LinearLayout
           android:orientation="horizontal"
           android:layout_weight="0.3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <!-- Icon sửa và xoá -->
           <ImageView
               android:id="@+id/update_icon"
               android:src="@drawable/square_pen"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_marginEnd="8dp"
               app:tint="@color/green"
               android:layout_weight="1"/>

           <ImageView
               android:id="@+id/delete_icon"
               android:src="@drawable/circle_minus"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_marginEnd="8dp"
               app:tint="@color/red"
               android:layout_weight="1"/>
       </LinearLayout>


    </LinearLayout>

    <!--SĐt-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/robotolight"
            android:text="SĐT: "
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:fontFamily="@font/robotolight"
            android:id="@+id/tv_phone"
            android:text="0333241634 "
            android:layout_marginStart="2dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <!-- Email -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:fontFamily="@font/robotolight"
            android:text="Email:"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:fontFamily="@font/robotolight"
            android:id="@+id/tv_email"
            android:text="anhquan@gmail.com"
            android:layout_marginStart="2dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <!--CCCD-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Số CCCD:"
            android:fontFamily="@font/robotolight"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_identity_card"
            android:text="025204013481"
            android:fontFamily="@font/robotolight"
            android:layout_marginStart="2dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>
